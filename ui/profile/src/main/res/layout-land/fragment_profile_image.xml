<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.joaoflaviofreitas.dietplan.ui.profile.profileimagefragment.ProfileImageFragment">

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/title_edit_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Edit Image"
        android:gravity="center_vertical"
        app:drawableStartCompat="@drawable/ic_baseline_keyboard_arrow_left_24" />

    <TextView
        android:id="@+id/profile_photo_title"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/title_edit_image"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="@string/profile_photo"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/edit"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/title_edit_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Edit"
        android:gravity="center_vertical"
        android:layout_marginEnd="10dp"/>

    <ImageView
        android:transitionName="imageView"
        android:id="@+id/profile_img"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_baseline_person_24"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@id/profile_photo_title"
        android:layout_marginVertical="20dp"
         />

</androidx.constraintlayout.widget.ConstraintLayout>